<div class="row">
    <div class="col-md-3">
        <%= image_tag @user.profile.avatar.url, class: 'img-set' %> 
    </div>
    
    <div class="col-md-6">
        <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %><br/></h1>
        <h3><span class="job-title-icon"><%= job_title_icon %> </span><%= @user.profile.job_title %><br/></h3>
        <div class="well profile-description">
            <h3>Description</h3>
            <%= @user.profile.description %>
        </div>
        <h3>Contact Info</h3>
        <% if current_user.plan_id == 2 %>
            <div class="well contact-info">
                <h4 class="c-number">Contact Number</h3>
                <%= @user.profile.phone_number %><br/>
                <h4 class="c-email">Contact E-Mail</h3>
                <%= @user.profile.contact_email %><br/>
            </div>
        <% end %>
        
        
    </div>
</div>