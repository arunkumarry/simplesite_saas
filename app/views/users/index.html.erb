<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1 class="text-center">Arun Match Community</h1>
        <p class="text-center">Meet all the community members HERE!</p>
        <!--<div class="well">-->
            <ul class="list-unstyled">
                <% @users.each do |user| %>
                    <% if user.profile %>
                        <li>
                            <div class="well row <%= cycle('white-bg', '') %>">
                                <div class="col-sm-4 text-center", id="thumbnail">
                                    <% if user.profile.avatar %>
                                        <%= link_to user do %>
                                            <%= image_tag user.profile.avatar.url(:thumb), class: "thumb-img" %>
                                        <% end %>
                                    <% end %>
                                </div>
                                
                                <div>
                                    <%= link_to user do %>
                                        <h3><%= user.profile.first_name %> <%= user.profile.last_name %></h3></br>
                                    <% end %>
                                    <p class="title-style">
                                        <%= user.profile.job_title %>
                                        <% if user.plan_id == 2 %>
                                            <span class="label label-danger">PRO</span>
                                        <% end %>
                                    </p>
                                </div>
                            </div>
                        </li>
                    <% end %>
                <% end %>
            </ul>
        <!--</div>-->
    </div>
</div>